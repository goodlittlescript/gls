#!/bin/bash
#############################################################################
gls_list_usage () {
printf "%s" "\
usage: gls list [-acehq] [COMMAND...]

  List available commands.

options:

  -a          list all
  -c          list commands (default)
  -e          list env commands
  -h          prints help
  -n          list nest children
  -q          omit summaries

"
}
filter_parents=true
print_desc=true
extnames=()
args=""
while [ $OPTIND -le $# ]
do
  if getopts "acehnq" option
  then
    case $option in
      (a) extnames+=(".*") ;;
      (c) extnames+=("") ;;
      (e) extnames+=("env") ;;
      (h) gls_list_usage
          exit 0 ;;
      (n) filter_parents=false ;;
      (q) print_desc=false ;;
      (*) gls_list_usage | head -n 1
          exit 2 ;;
    esac
  else
    args="$args \"\${$OPTIND}\"" 
    OPTIND=$(($OPTIND + 1))
  fi
done
eval set -- "$args"

# commands by default
if [ 0 -eq ${#extnames[@]} ]
then extnames+=("")
fi

#############################################################################
IFS=: read -a paths <<<"$PATH"
printf -v command_path '%s_' "$@"
printf -v extname_pattern '%s|' "${extnames[@]}"

path_index=0
for path in "${paths[@]}"
do
  if ! [ -r "$path" ]
  then unset paths[$path_index]
  fi
  path_index=$(($path_index + 1))
done

find "${paths[@]}" -maxdepth 1 -perm -u+x -name "${gls}-${command_path%_}*" |
sed -e 's|.*/||' |
awk -v "prefix=${gls}-" -v "head=${1}" '
BEGIN { FS="_"; OFS=" "; }
{
  sub(prefix, "", $1)
  if (head == "" || head == $1) {
    print ": " $0
  }
}
' |

if [ "true" = "$filter_parents" ]
then cut -d " " -f $(($# + 2))
else cut -d " " -f $(($# + 2))-
fi |

# filter by type
awk -F "." '
{
  if (NF > 1) { extname=$NF }
  else { extname="" }
  print "." extname " " $0
}
' |
grep -E "^\.(${extname_pattern%|}) " |
sed -ne 's/^[^ ]* //' -e '/[^ ]/p' |
sort -u |

if [ "true" = "$print_desc" ]
then
  while read command_name
  do
    . gls_exec_reset
    . gls_exec_env "$@" "$command_name"
    if [ -n "$GLS_COMMAND_DESC" ]
    then printf "  %-15s %s\n" "$command_name" "$GLS_COMMAND_DESC"
    else printf "  %s\n" "$command_name"
    fi
  done
else cat
fi
